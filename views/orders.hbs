{{> partials/menu}}
<div class="col-lg-9 top-pad-67">
    <div class="panel panel-default">
        <div class="panel-heading">Orders</div>
        <div class="panel-body card-body">
            <div class="col-lg-12 top-pad-10">
                    {{!-- <li class="list-group-item">
                        {{#if searchTerm}}
                        <strong>{{ @root.__ "Orders" }} - <span class="text-danger">{{ @root.__ "Filtered term" }}:
                                {{searchTerm}} </span></strong>
                        {{else}}
                        <strong>{{ @root.__ "Recent orders" }}</strong>
                        {{/if}}
                    </li> --}}
                    {{#if orders}}
                    <table style="width:100%" id="table_orders" class="display">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Date</th>
                                <th>First Name</th>
                                <th>Total</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{log orders}}
                            {{#each orders}}
                            <tr>
                                <td>{{this.orderEmail}}</td>
                                <td>{{formatDate this.orderDate "DD/MM/YYYY - hh:mm"}}</td>
                                <td>{{this.orderFirstname}}</td>
                                <td>{{this.orderTotal}}</td>
                                <td>{{this.orderPhoneNumber}}</td>
                                <td class="text-{{getStatusColor this.orderStatus}}">{{this.orderStatus}}</td>
                                <td>
                                    <a class="text-success" style="margin-right: 10px" href="/admin/order/view/{{this._id}}">
                                        <i class="fa fa-info-circle"></i>
                                    </a>

                                    <a class="text-danger" href="/admin/order/delete/{{this._id}}"
                                        onclick="return confirm('Are you sure you want to delete this order?');">
                                        <i class="fa fa-trash-o"></i>
                                    </a>


                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    {{else}}
                    <li class="list-group-item">
                        <h4 class="text-center">
                            {{ @root.__ "No orders found" }}
                        </h4>
                    </li>
                    {{/if}}


               
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>

<script>
    $(document).ready(function () {
        $('#table_orders').DataTable();
    });
</script>